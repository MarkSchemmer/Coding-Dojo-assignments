@model _Activity

    <style> 
        
        .form-row{
            margin-bottom:25px;
        }


    form input{
        margin-bottom: 25px;
    }


    button{
        display: block;
    }


    form{
        width:900px;
        height:800px; 
        margin:auto;
        margin-top:50px;
        padding:25px;
    }
        
    </style>

<h3>Create Activity</h3>

<form asp-action="CreateAct" asp-controller="Home" method="POST">


    @if(ViewBag.a==true){

        <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Errors in Form</h4>
                <span asp-validation-for="Title"></span> <br>
                <span asp-validation-for="Time"></span><br>
                <span asp-validation-for="Date"></span><br>
                <span asp-validation-for="DurationFormat"></span>
                <span asp-validation-for="Description"></span>
        </div>
    }


    <div class="form-group">

        <div class="form-row">
          <div class="col-md-5">
            <input asp-for="Title" class="form-control" placeholder="Title">
          </div>
          <div class="col-md-6">
            <input asp-for="Time" class="form-control" placeholder="Time">
          </div>

          <div class="col-md-5">
                <div class="row">
                    <div class='col-md-12'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker1'>
                                <input asp-for="Date" class="form-control datepicker" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <!-- <script type="text/javascript">
                        $(function () {
                            $('#datetimepicker1').datepicker();
                        });
                    </script> -->
                </div>
            </div>

            <div class="col-sm-3">
                    <input asp-for="Duration" class="form-control" placeholder="Duration">
            </div>

            <div class="form-group col-sm-3">
                    <select id="inputState" asp-for="DurationFormat" class="form-control">
                    <option value="Hours" selected>Hours</option>
                    <option value="Minutes">Minutes</option>
                    <option value="Days">Days</option>
                    </select>
                </div>

                <div class="form-group">
                       
                        <textarea placeholder="Description here ..." asp-for="Description" class="form-control"cols="30" rows="10"></textarea>
                </div>

        </div>
    </div>
    <hr>

        <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Activity</button>
        </div>
      </form>


