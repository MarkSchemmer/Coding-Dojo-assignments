@model User

<h2>Hello @Model.FirstName</h2>

<div class="msg">
    <form action="createPost" method="POST">
        <div class="form-group">
            <label for="message">Post a Message</label>
            <textarea class="form-control" name="message" rows="3"></textarea>
        </div>
        <button class="btn btn-primary">Post</button>
    </form>
</div>
<br>
<hr>
<br>
<div class="dis-msg">
        @foreach(var item in @Model.messages){

            <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">@item.user.FirstName Said at : @item.CreatedAt</h5>
                      <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                      <p class="card-text">@item.message</p>
                      <a href="#" class="card-link">Card link</a>
                      <a href="#" class="card-link">Another link</a>
                    </div>
                  </div>


                  @foreach(var it in @item.comments){
                    <div class="card">
                            <div class="card-body">
                                <h4>Comment</h4>
                              <h5 class="card-title">@it.user.FirstName Said at : @it.CreatedAt</h5>
                              <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                              <p class="card-text">@it.comment</p>
                              <a href="#" class="card-link">Card link</a>
                              <a href="#" class="card-link">Another link</a>
                            </div>
                          </div>
                  }

                  <div class="msg">
                      <h4>Leave a comment</h4>
                        <form action="createComment" method="POST">
                            <div class="form-group">
                                <label for="comment">Post a Message</label>
                                <input type="hidden" value="@item.MessageId" name="MsgId">
                                <textarea class="form-control" name="Comment" rows="3"></textarea>
                            </div>
                            <button class="btn btn-primary">Comment</button>
                        </form>
                    </div>
        }
</div>